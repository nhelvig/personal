<style>
.new-investment-div {
	width: 50%;
	margin: 25% 15% 25% 0;
}
</style>

<script>
	$(document).on("focus", "[data-behaviour~='datepicker']", function(e) {
	  $(this).datepicker = return {
	    format: "yyyy-mm-dd",
	    weekStart: 1,
	    autoclose: true
	  };
	});
</script>

<h1>New Transaction</h1>
<form action="/investmentTracker" method="POST" class="new-investment-div"><%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<div class="panel panel-default" >
		<div class="panel-heading">

			<div class="row ">
				<div class="col-md-3 col-sm-3 col-xs-3">
					<span class="help-block text-muted" >Symbol</span>
					<input type="text" class="form-control" name="transaction[symbol]" id="transaction_symbol" />
				</div>
				<div class="col-md-3 col-sm-3 col-xs-3">
					<span class="help-block text-muted" >Quantity</span>
					<input type="number" step="0.01" class="form-control" name="transaction[quantity]" id="transaction_quantity"/>
				</div>
				<div class="col-md-3 col-sm-3 col-xs-3">
					<span class="help-block text-muted" >Price</span>
					<input type="number" step="0.01" class="form-control" name="transaction[price]" id="transaction_price"/>
				</div>

				<div class="col-md-3 col-sm-3 col-xs-3">
					<span class="help-block text-muted" >Action</span>
					<select class="form-control" name="transaction[action]" id="transaction_action">
					<option value="buy">Buy</option>
					<option value="sell">Sell</option></select>
				</div>
				<div class="col-xs-1 col-xs-1 col-xs-1">
					<span class="help-block text-muted" >Date</span>
					<input type="text" name="transaction[date]" id="transaction_date" data-provide='datepicker' >
				</div>
			</div>
		</div>
		<div class="row">
			<div class="pad-adjust">
				<input type="submit"  class="btn btn-warning btn-block" value="Save new transaction" />
			</div>
		</div>

	</div>
</div>
</form>

<div id="import-csv">
    <h4>Import a CSV File</h4>
    <form enctype="multipart/form-data" action="/transactions/import" accept-charset="UTF-8" method="post"><%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <label class="btn btn-default btn-file">
        	Browse <input type="file" name="file" id="file" style="display: none;"/>
        </label>
        <label class="btn btn-default btn-submit">
        	Submit <input type="submit" name="commit" value="Import CSV" style="display: none;"/>
        </label>
</form></div>