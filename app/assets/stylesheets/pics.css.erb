body {
  background: rgba(0, 0, 0, 0.59);
  font-family: 'Poiret One', cursive;
  text-align: center;
}

.picture {
  display: block;
  width: 100%;
  vertical-align: top;
}

.picture:hover {
  border: 2px solid white;
  padding: 0px;
}

.photo-top {
  color: white;
}

.image-overlay {
  position: relative;
  display: inline-block;
  height: 488px;
  width: 650px;
  background: black;
  margin: 25px;
  border: 3px solid white;

}

.image-overlay:after {
  content: attr(data-content);
  color: white;
  font-size: 2em;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
  padding-top: 35%;
  background: rgba(0,0,0,0.6);
  transition: all 1s;
  -webkit-transition: all .5s;
}

#malawi:after {
  content: 'Some text...';
}

.image-overlay:hover:after {
  opacity: 1;
}
